extends layout

block content
  h1= title

  ul
    each val in bookinstance_list
      li
        - let statusClass = ''
        if val.status === 'Available'
          - statusClass = 'text-success'
        else if val.status === 'Maintenance'
          - statusClass = 'text-danger'
        else
          - statusClass = 'text-warning'

        a(href=`/catalog/bookinstance/${val._id}`, class=statusClass)
          | #{val.book.title} â€” #{val.status}

        if val.status !== 'Available'
          div Due: #{val.due_back_formatted}
